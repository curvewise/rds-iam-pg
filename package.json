{
  "name": "goldilocks-data-layer",
  "version": "0.0.0",
  "private": true,
  "description": "Data backend for goldie",
  "scripts": {
    "configure-github-package-registry": "echo \"//npm.pkg.github.com/:_authToken=${GITHUB_TOKEN}\" >> .npmrc",
    "heroku-prebuild": "npm run configure-github-package-registry",
    "prebuild": "del dist/",
    "build": "tsc",
    "debugger": "node --inspect-brk dist/index.js",
    "prestart": "del dist/",
    "start:wait-until-ready": "until test -f dist/index.js; do sleep 1; done",
    "start": "concurrently --names compilation,server \"tsc --watch\" \"npm run start:wait-until-ready && nodemon dist/index.js\"",
    "load-seed-data": "DATABASE_URL=$(ts-node src/scripts/get-database-url.ts) src/scripts/load-seed-data.sh",
    "test": "ts-mocha --exit \"src/**/*.test.ts\"",
    "check-types": "tsc --noEmit",
    "lint": "eslint . --ext js,ts",
    "format:js:check": "prettier --check \"**/*.@(ts|js|md|json|yml)\"",
    "format:js:fix": "prettier --write \"**/*.@(ts|js|md|json|yml)\"",
    "format:sql:check": "node src/scripts/format-sql.js --check",
    "format:sql:fix": "node src/scripts/format-sql.js",
    "format:check": "run-s --silent --continue-on-error format:js:check format:sql:check",
    "format:fix": "run-s --silent --continue-on-error format:js:fix format:sql:fix",
    "configure-s3-trigger": "node dist/scripts/configure-s3-trigger.js"
  },
  "author": "Curvewise",
  "license": "UNLICENSED",
  "dependencies": {
    "@curvewise/armscyence-types-s3-check-obj": "1.0.5",
    "ajv": "^6.12.6",
    "aws-sdk": "^2.807.0",
    "chai-as-promised": "^7.1.1",
    "config": "^3.3.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphile-worker": "^0.8.1",
    "joi": "^17.3.0",
    "js-yaml": "^3.14.1",
    "passport": "^0.4.1",
    "passport-http": "^0.3.0",
    "postgraphile": "4.10.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": "12.9.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/cors": "^2.8.8",
    "@types/mocha": "^8.2.0",
    "@types/passport": "^1.0.4",
    "@types/passport-http": "^0.3.8",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "deepmerge": "^4.2.2",
    "del-cli": "^3.0.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^5.0.0",
    "globby": "^11.0.1",
    "graphql-request": "^3.3.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "pg": "^8.5.1",
    "pg-formatter": "^1.2.0",
    "portfinder": "^1.0.28",
    "prettier": "^2.2.1",
    "ts-mocha": "^8.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "dist/"
    ],
    "verbose": true,
    "delay": "500"
  }
}
